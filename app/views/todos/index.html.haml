%h1 Todo一覧
%table
    %tr
        %td
            title
        %td
            body
        %td
            opration
    - @todos.each do |todo|
        %tr
            %td
                #{todo.title}
            %td
                #{todo.body}
            %td
                = link_to "詳細", todo_path(todo)
                = link_to "編集", edit_todo_path(todo)
                = link_to "削除", todo_path(todo),{method: :delete}
%hr
= link_to "新規作成", new_todo_path
